<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Subir">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/borde_lavanda">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:text="Subir datos"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/lavanda"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/subirimagen"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadNombre"
                android:background="@drawable/borde_lavanda"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Ingresa un nombre"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavanda" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadDescripcion"
                android:background="@drawable/borde_lavanda"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Ingresa una descripcion"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavanda" />

            <EditText
                android:id="@+id/uploadPrecio"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/borde_lavanda"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Ingresa un precio"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavanda" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnGuardar"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius="20dp"
                android:text="Guardar" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>